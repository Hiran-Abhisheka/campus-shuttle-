  transform: translateY(30px);
  transition: all 0.6s ease-out;
  letter-spacing: 0.5px;
  color: #666;
}

.about-header p.visible {
  opacity: 1;
  transform: translateY(0);
}

@media (max-width: 768px) {
  .about-title {
    font-size: 3.5rem;
    letter-spacing: 3px;
  }
  
  .about-subtitle {
    font-size: 1.4rem;
    padding: 0 2rem;
  }
}

.title-decoration::before,
.title-decoration::after {
  content: '';
  position: absolute;
  width: 4px;
  height: 4px;
  border-radius: 50%;
  background: #8417BA;
  top: -0.5px;
}

.title-decoration::before {
  left: -8px;
}

.title-decoration::after {
  right: -8px;
}

.section-subtitle {
  font-size: 1.1rem;
  color: #666;
  margin-top: 1rem;
  opacity: 0;
  transform: translateY(30px);
  transition: all 0.6s ease-out;
  transition-delay: 200ms;
  max-width: 600px;
  margin: 1rem auto 0;
  line-height: 1.6;
}

.section-subtitle.visible {
  opacity: 1;
  transform: translateY(0);
}

@media (max-width: 768px) {
  .section-title {
    font-size: 2.75rem;
  }
  
  .section-subtitle {
    font-size: 1rem;
    padding: 0 1rem;
  }
}

