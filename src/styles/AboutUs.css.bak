/* Main Section Styles */
.section {
  padding: 6rem 0;
  background: var(--white);
  position: relative;
  width: 100%;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  overflow: hidden;
}

.container {
  width: 100%;
  max-width: 1400px;
  margin: 0 auto;
  padding: 0 4rem;
  position: relative;
  z-index: 2;
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 2rem;
}

.about-header {
  text-align: center;
  position: relative;
  margin-bottom: 7rem;
  padding: 2rem 0;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.about-header::before {
  content: '';
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 2px;
  height: 60px;
  background: linear-gradient(to bottom, transparent, var(--black));
}

.about-header::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 100px;
  height: 1px;
  background: linear-gradient(90deg, transparent, var(--black), transparent);
}

.about-header h2 {
  font-family: 'Keylinx', sans-serif;
  font-size: 4.5rem;
  color: var(--black);
  margin-bottom: 2rem;
  text-transform: uppercase;
  letter-spacing: 5px;
  position: relative;
  display: inline-block;
  font-weight: 400;
  text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
  opacity: 0;
  transform: translateY(-30px);
  transition: all 0.6s ease-out;
}

.about-content {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 4rem;
  align-items: start;
  padding: 2rem 0;
}

.about-header h2::after {
  content: '';
  position: absolute;
  bottom: -10px;
  left: 0;
  width: 100%;
  height: 1px;
  background: var(--black);
  transform: scaleX(0);
  transition: transform 0.6s cubic-bezier(0.165, 0.84, 0.44, 1);
  transform-origin: right;
}

.about-header h2.visible {
  opacity: 1;
  transform: translateY(0);
}

.about-header h2.visible::after {
  transform: scaleX(1);
  transform-origin: left;
}

.about-header p {
  font-size: 1.4rem;
  font-family: 'Inter', sans-serif;
  color: var(--text);
  width: 100%;
  text-align: center;
  max-width: 800px;
  margin: 0.5rem auto 0;
  line-height: 1.6;
  font-weight: 400;
}

.about-left-content {
  display: flex;
  flex-direction: column;
  gap: 2rem;
}

.about-description {
  font-size: 1.1rem;
  line-height: 1.8;
  color: var(--text);
}

.stats-container {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 2rem;
  padding: 2rem 0;
}

.stat-item {
  text-align: center;
}

.stat-number {
  font-size: 2.5rem;
  font-weight: 700;
  color: var(--primary);
  margin-bottom: 0.5rem;
}

.stat-label {
  font-size: 1rem;
  color: var(--text);
}

.about-right-content {
  display: flex;
  justify-content: center;
}

.about-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 1.5rem;
  width: 100%;
}

.about-card {
  background: #fff;
  padding: 2rem;
  border-radius: 10px;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  text-align: center;
  transition: all 0.3s ease;
}

.about-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
}

.about-card i {
  font-size: 2rem;
  color: var(--primary);
  margin-bottom: 1rem;
}

.about-card h3 {
  font-size: 1.2rem;
  color: var(--black);
  margin-bottom: 1rem;
}

.about-card p {
  font-size: 0.9rem;
  color: var(--text);
  line-height: 1.6;
}

/* Animations */
.fade-up, .fade-down, .fade-left, .fade-right {
  opacity: 0;
  transform: translateY(30px);
  transition: opacity 0.6s ease-out, transform 0.6s ease-out;
}

.fade-down {
  transform: translateY(-30px);
}

.fade-left {
  transform: translateX(-30px);
}

.fade-right {
  transform: translateX(30px);
}

.visible {
  opacity: 1;
  transform: translate(0);
}

/* Responsive Design */
@media screen and (max-width: 1200px) {
  .container {
    padding: 0 2rem;
  }
  
  .about-grid {
    gap: 1rem;
  }
  
  .about-card {
    padding: 1.5rem;
  }
}

@media screen and (max-width: 992px) {
  .about-header h2 {
    font-size: 3.5rem;
  }
  
  .about-content {
    grid-template-columns: 1fr;
    gap: 3rem;
  }
  
  .about-right-content {
    margin-top: 2rem;
  }
}

@media screen and (max-width: 768px) {
  .about-header h2 {
    font-size: 3rem;
  }
  
  .stats-container {
    grid-template-columns: repeat(2, 1fr);
  }
  
  .about-grid {
    grid-template-columns: 1fr;
  }
}

@media screen and (max-width: 576px) {
  .container {
    padding: 0 1rem;
  }
  
  .about-header h2 {
    font-size: 2.5rem;
  }
  
  .stats-container {
    grid-template-columns: 1fr;
  }
  
  .about-card {
    padding: 1.25rem;
  }
}
